{
    "name": "anik/loguzz",
    "description": "Loguzz is a guzzlehttp/guzzle request & response logger",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Syed Sirajul Islam Anik",
            "email": "sirajul.islam.anik@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^6.2|^7.1",
        "guzzlehttp/promises": "^1.5|^2.0",
        "psr/log": "^2.0|^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0",
        "colinodell/psr-testlogger": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "Loguzz\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Loguzz\\Test\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
